# Architecture
BR2_aarch64=y

# Toolchain
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y
BR2_TOOLCHAIN_BUILDROOT_CXX=y

# Kernel — not built (Phase 1 uses prebuilt)
# BR2_LINUX_KERNEL is not set

# U-Boot — not built (Phase 1 uses extracted bootloader)
# BR2_TARGET_UBOOT is not set

# TF-A — not built (Phase 1 uses extracted bootloader)
# BR2_TARGET_ARM_TRUSTED_FIRMWARE is not set

# Init system
BR2_INIT_BUSYBOX=y
